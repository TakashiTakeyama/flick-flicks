<div class="wrapper">
  <div class="container">
  <div class="user-top"><p></p></div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
          <div class="userImg">
          <%= link_to image_tag(user.icon.url, class: "card-img-top", :size =>'300x300' ), users_path %>
          </div>
          <div class="card-body">
            <p class="card-text text-center"><%= user.name %></p>
            <%= render 'follow_form', user: user %>
            <div class="d-flex justify-content-between align-items-center">
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!--<div><%#= paginate @users, window: 2 %></div>-->
  </div>
</div>
