<div class="movie-show pt-5">
  <div class="container">
  <div class="card w-50 mx-auto">
    <div class="card-body mt-8 shadow-sm">
      <h4 class="card-title mt-3 pb-3 text-center">Movie Registration</h4>
        <%= form_with(model: @movie, local:true) do |f| %>
        <%= render 'layouts/error_message', model: f.object %>
        <div class="form-group input-group mx-auto">
          <div class="input-group-prepend">
            <span class="input-group-text"><%= fa_icon("video-camera") %></span>
          </div>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder:"title" %>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><%= fa_icon("film") %></span>
          </div>
          <%= f.label :image %>
          <%= f.file_field :image, autofocus: true, autocomplete: "image", placeholder:"email" %>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><%= fa_icon("eye") %></span>
          </div>
          <%= f.select :watched_by, Movie.watched_bies.keys.to_a, autofocus: true, autocomplete: "watched_by", placeholder:"ニックネーム" %>
        </div>
        <div class="form-group input-group mx-auto">
          <div class="form-group">
            <span class="input-group-text"><%= fa_icon("tags") %></span>
          </div>
            <% Category.all.each do |cat| %>
            <%= f.check_box :category_ids, { multiple: true, checked: cat[:checked], disabled: cat[:disabled], include_hidden: false }, cat[:id] %>
            <label><%= cat.name %></label>
            <% end %>
        </div>
          <div class="actions text-center">
            <%= f.submit "Registration", class: "btn btn-default"%>
            <%= link_to "Back", movies_path, class: 'btn btn-default btn-lg'%></br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>