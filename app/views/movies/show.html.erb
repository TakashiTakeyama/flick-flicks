<div class="movie-show">
  <div class="text-center">
    <% if flash[:notice] %>
      <div class="alert mx-auto" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= image_tag @movie.image.url, :size =>'320x320' %>
  </div>
  <div class="card mx-auto text-center" style="width: 18rem;">
    <div class="card-body text-center">
      <h5 class="card-title">映画情報</h5>
        <h4 class="card-subtitle mb-2 text-muted">
        <%= @movie.title %>
          </h4>
      <p><% @movie.categories.each do |cat| %>
          <%= cat.name %>
          <% end %>
      </p>
      <p class="card-text"></p>
      <p class="button">
        <%= link_to "post-review", new_review_path(@movie, @movie.id), class: "btn btn-custom btn-lg"%></br>
      </p>
      <p class="button">
        <%= link_to "reviews", reviews_path(@movie, @movie.id), class: "btn btn-custom btn-lg"%></br>
      </p>
      <p class="button">
        <%= link_to "movies", movies_path, class: "btn btn-custom btn-lg"%></br>
      </p>
      <p>
      <% if @favorite.present? %>
        <%= link_to  favorite_movie_path(id: @movie.id), method: :delete do %>
          <i class="fa fa-star fa-1x pt-4" aria-hidden="true">Bad</i>
        <% end %>
      <% else %>
        <%= link_to  favorite_movies_path(movie_id: @movie.id), method: :post do %>
          <i class="fa fa-star-o fa-1x pt-4" aria-hidden="true">Good!</i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>