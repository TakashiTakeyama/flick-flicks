<div class="card-log">
  <div class="card-body mx-auto">
    <h1 class="card-title mt-3 text-center">Log In</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <!--    <p class="divider-text">-->
      <!--      <span class="bg-white">または</span>-->
      <!--    </p>-->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= fa_icon("envelope") %></span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email" %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= fa_icon("lock lg") %></span>
        </div>
        <%= f.password_field :password, autocomplete: "password", placeholder:"パスワード" %>
      </div>
      <div class="form-group input-group">
        <div class="form-group">
        </div>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
      <div class="form-group input-group">
        <div class="form-group">
        </div>
          <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
      </div>
      <div class="form-group input-group">
        <%= render "devise/shared/links" %>
      </div>
    <p class="text-center">アカウントをお持ちですか？<%= link_to "サインアップする", new_user_registration_path %></p>
    <!--    <p class="mt-5 mb-3 text-muted">&copy; 2019</p>-->
    <%#= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
