<div class="card-log">
 <div class="card-body mx-auto text-center">
   <h1 class="card-title text-center"></h1>
    <%= form_with(model:@review,local: true) do |form| %>
      <% if @review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@review.errors.count, "#{t('view.error')}") %></h2>
          <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= image_tag @movie.image.url, :size =>'320x320' %>
      </div><br>
      <div class="field text-center">
        <%#= form.label :impression %>
        <%= form.text_area :impression, :size => '40x5' %>
        <%= hidden_field_tag :movie_id, @movie.id %>
      </div><br>
      <div class="actions text-center">
        <%= form.submit('送信',class: 'btn btn-info') %>
      </div>
    <% end %>
 </div>
</div>
<%#= link_to "一覧へ", movies_path %>
