  <div class="container" %>
    <h2>Review</h2>
    <% @movie = Movie.find(params[:format]) %>
    <div class="video-info justify-content-center d-flex">
    <%= image_tag @movie.image.url, :size =>'320x320' %>
    </div>
    <div class="review-button justify-content-center d-flex"><%= link_to 'レビューを書く', new_review_path(@movie, @movie.id), class:"btn btn-warning" %>
    </div></br>
    <h2><strong>Title&nbsp;&nbsp;</strong><%= @movie.title %></h2>
  <% @movie.reviews.each do |review| %>
    <div class="reviews">
      <div class="row blockquote review-item">
        <div class="col-md-3 text-center">
          <%= link_to review_path(review) do %>
            <%= image_tag review.user.icon.url, :size =>'80x80' %><br>
            <%= @movie.title %>
          <% end %>
          <div class="caption">
          </div>
        </div>
        <div class="col-md-9">
          <%= review.impression %><br>
          <%= @movie.watched_by + "#{'で見られるよ!'}"%><br>
          <small class="review-date"><%= Date.parse(review.created_at.to_s).strftime("%Y年%m月%d日") %></small>
        </div>
      </div>
    </div>
<!--  <div class="review-button"><%#= link_to 'すべてのレビューを見る', video_reviews_path(@video), class:"btn btn-info" %></div>-->
    <% end %>
    <div class="actions text-center">
      <%= link_to "movies", movies_path, class: 'btn btn-default btn-lg'%></br>
      <%= link_to "post-review", new_review_path(@movie, @movie.id), class: 'btn btn-default btn-lg'%>
    </div>
  </div>
</div>