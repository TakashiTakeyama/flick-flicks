  <h2>レビュー</h2>
  <% @movie = Movie.find(params[:format]) %>
  <p>
    <%= image_tag @movie.image.url, :size =>'320x320' %>
  </p>
    <h2>
      <%= @movie.title %>
    </h2>
  </p>
  <p>
    <%= @movie.watched_by %>
  </p>

<%# unless @review.user_id == current_user.id %>
  <%# if @favorite_review.present? %>
    <%#= link_to 'お気に入り解除する', favorite_reviews_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <%# else %>
    <%#= link_to 'お気に入りする', favorite_reviews_path(review_id: @review.id), method: :post, class: 'btn btn-primary' %>
  <%# end %>
<%# end %>

  <% @movie.reviews.each do |review| %>
    <div class="reviews">
      <div class="row blockquote review-item">
        <div class="col-md-3 text-center">
          <%= link_to review_path(review) do %>
            <%= review.impression %>
            <%= image_tag review.user.icon.url, :size =>'80x80' %>
            <%#= holder_tag '80x80', 'アイコン' unless review.user.image.attached? %>
          <% end %>
          <div class="caption">
<!--            <small><%#= link_to review.user.username, review.user %></small>-->
          </div>
        </div>
        <div class="col-md-9">
<!--          <h3><%#= link_to review.title, video_review_path(@video, review) %></h3>-->
          <%#= simple_format(review.content.truncate(100)) %>
          <small class="review-date"><%= Date.parse(review.created_at.to_s).strftime("%Y年%m月%d日") %></small>
        </div>
      </div>
    </div>
<!--  <div class="review-button"><%#= link_to 'すべてのレビューを見る', video_reviews_path(@video), class:"btn btn-info" %></div>-->
  <% end %>
  <%= link_to "映画一覧へ", movies_path %></br>
<%= link_to "レビューを投稿する", new_review_path(@movie, @movie.id)%>
</div>
